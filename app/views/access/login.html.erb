<% @page_title = "Admin Login" %>
<div class="login">
	<h2>Admin Menu</h2>
	<%= form_tag(:action => 'attempt_login') do %>
	<table>		
		<tr>
			<th><%= label_tag(:email) %></th>
			<td><%= text_field_tag(:email) %></td>
		</tr>
		<tr>
			<th><%= label_tag(:password) %></th>
			<td><%= password_field_tag(:password) %></td>
		</tr>		
		<tr>
			<th></th>
			<td><%= submit_tag("Log In") %></td>
		</tr>
	</table>
	<% end %>
</div>