<!DOCTYPE html>
<html>
<head>
  <title>Simple CMS</title>
  <%= stylesheet_link_tag('application', :media => 'all') %>
  <%= javascript_include_tag('application') %>
</head>
<body>
	<div id="header">
		<h1>Simple CMS Admin</h1>
	</div>
	<div id="main">
		<% if !flash[:notice].blank? %>
			<div class="notice">
				<%= flash[:notice] %>
			</div>
		<% end %>
		<div id="content">
			<%= yield %>
		</div>
	</div>
	<div id="footer">
		<p id="copyright">&copy; MVC Application</p>
	</div>
</body>
</html>
